<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/logo_image"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_image"
        android:layout_centerHorizontal="true"
        android:text="Bienvenue dans Kidsit"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
       android:fontFamily="@font/quicksand_bold"
        android:textColor="@color/text_head_color"
        android:id="@+id/head_title"
        />

    <TextView
        android:textColor="#0baea0"
        android:id="@+id/body_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head_title"
        android:layout_centerHorizontal="true"
        android:text="Prenons soin de vos bien-aimÃ©s"
        android:layout_marginTop="6dp"
        android:textSize="14sp"
        android:fontFamily="@font/asap_regular"
        android:layout_alignStart="@id/head_title"
        />

    <TextView
        android:id="@+id/body_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/body_title"
        android:layout_centerHorizontal="true"
        android:text="Se connecter en tant que:"
        android:layout_marginTop="55dp"
        android:textSize="15sp"
        android:fontFamily="@font/asap_medium"
        android:layout_alignStart="@id/head_title"
        android:textColor="@color/text_head_color"
        />

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/body_title1"
        android:layout_marginTop="40dp"
        android:layout_alignStart="@+id/head_title"
        android:layout_alignEnd="@+id/head_title"
        >
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="86dp"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_gravity="center"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:src="@drawable/ic_baseline_supervised_user_circle_24"
                />
            <androidx.cardview.widget.CardView
                android:id="@+id/parent_card_view"
                app:cardElevation="2dp"
                android:layout_marginStart="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginEnd="3dp"
                app:cardCornerRadius="6dp"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="#72bb53"
                >
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parent"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/quicksand_bold"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_alignParentEnd="true"

            android:layout_width="wrap_content"
            android:layout_height="86dp"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_gravity="center"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:src="@drawable/ic_baseline_face_24"
                />
            <androidx.cardview.widget.CardView
                app:cardElevation="2dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginStart="3dp"
                app:cardCornerRadius="6dp"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="#ffa382"
                >
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nanny"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/quicksand_bold"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/head_title"
        android:layout_alignEnd="@+id/head_title"
        >
        <LinearLayout
            android:padding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Retour"
                    android:textSize="14sp"
                    android:fontFamily="@font/asap_medium"
                    />

        </LinearLayout>
        <LinearLayout
            android:layout_alignParentEnd="true"
            android:padding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

                <TextView
                    android:textColor="#f85f6a"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Continuer"
                    android:textSize="14sp"
                    android:fontFamily="@font/asap_medium"
                    />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>