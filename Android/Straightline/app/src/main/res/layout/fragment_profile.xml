<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/myaccountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="My Account"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/sfprosemibold"
            android:textColor="#040404"
            />

        <TextView
            android:layout_alignParentEnd="true"
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Logout"
            android:layout_alignBaseline="@+id/myaccountText"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/sfprosemibold"
            android:textColor="@color/main_color"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_width="1px"
            app:civ_border_color="#a3a3a3"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_below="@+id/myaccountText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:src="@drawable/vijayimage"
            android:id="@+id/profile_image"
            />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Vijay Rathore"
            android:fontFamily="@font/sfprosemibold2"
            android:textSize="15sp"
            android:textColor="#414141"
            android:layout_below="@+id/profile_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            />
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/name"
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="iamvijay67@gmail.com"
            android:fontFamily="@font/sfpromedium2"
            android:textSize="11sp"
            android:lines="1"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/shareApp"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_below="@+id/email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="#42A5F5"
            app:cardCornerRadius="8dp"
            android:layout_marginBottom="20dp"
            >
            <TextView
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textColor="#fff"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/username"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invite Friends"
                android:fontFamily="@font/sfprosemibold2"
                android:textSize="12sp"
                android:lines="1"
                />
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shareApp"
            android:id="@+id/adminItemView"
            >

            <RelativeLayout
                android:id="@+id/adminVIEW"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#f6f6f6"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Admin"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/sfprosemibold2"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="4dp"
                android:id="@+id/addCat"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:id="@+id/addCatImg"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_baseline_notifications_none_24"
                    app:tint="#A3A3A3"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    />
                <TextView
                    android:layout_toEndOf="@+id/addCatImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="Send Push Notification"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/sfpromedium2"
                    />
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout

            android:id="@+id/settingsVIEW"
            android:layout_below="@+id/adminItemView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="#f6f6f6"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Settings"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/sfprosemibold2"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="4dp"
            android:id="@+id/createChallange"
            android:layout_below="@+id/settingsVIEW"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/addImg"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_baseline_add_circle_outline_24"
                app:tint="#A3A3A3"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                />
            <TextView
                android:layout_toEndOf="@+id/addImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="Create Challenge"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/sfpromedium2"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/myChallenge"
            android:layout_below="@+id/createChallange"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/myproductImg"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/flag"
                app:tint="#A3A3A3"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                />
            <TextView
                android:layout_toEndOf="@+id/myproductImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="Manage Challenge"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/sfpromedium2"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/deleteAccount"
            android:layout_below="@+id/myChallenge"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/languageImg"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_outline_delete_outline_24"
                app:tint="#A3A3A3"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/languageImg"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="Delete Account"
                    android:fontFamily="@font/sfpromedium2"
                    />

            </LinearLayout>

        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/aboutUsView"
            android:layout_below="@+id/deleteAccount"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="#f6f6f6"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="About Us"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/sfprosemibold2"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="4dp"
            android:id="@+id/privacypolicy"
            android:layout_below="@+id/aboutUsView"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/privacyImg"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_outline_privacy_tip_24"
                app:tint="#A3A3A3"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                />
            <TextView
                android:layout_toEndOf="@+id/privacyImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="Privacy Policy"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/sfpromedium2"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/developer"
            android:layout_below="@+id/privacypolicy"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/developerImg"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_outline_people_alt_24"
                app:tint="#A3A3A3"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/developerImg"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="App Developer"
                    android:fontFamily="@font/sfpromedium2"
                    />
                <TextView
                    android:id="@+id/developerCompany"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:text="softment.in"
                    android:textColor="#42A5F5"
                    android:fontFamily="@font/sfpromedium2"
                    />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/otherVIEW"
            android:layout_below="@+id/developer"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="#f6f6f6"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Others"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/sfprosemibold2"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="4dp"
            android:id="@+id/rateUs"
            android:layout_below="@+id/otherVIEW"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/rateUsImg"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_outline_rate_review_24"
                app:tint="#A3A3A3"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                />
            <TextView
                android:layout_toEndOf="@+id/rateUsImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="Rate Us"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/sfpromedium2"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/contactUs"
            android:layout_below="@+id/rateUs"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/contactImg"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_outline_contact_mail_24"
                app:tint="#A3A3A3"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/contactImg"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="Contact Us"
                    android:fontFamily="@font/sfpromedium2"
                    />
                <TextView
                    android:textColorLink="#42A5F5"
                    android:linksClickable="true"
                    android:autoLink="email"
                    android:id="@+id/contactEmail"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:text="support@straightline.com"
                    android:textColor="#42A5F5"
                    android:fontFamily="@font/sfpromedium2"
                    />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/contactUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            >
            <TextView





                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Version - "
                android:layout_marginStart="16dp"
                android:fontFamily="@font/sfpromedium"
                />
            <TextView
                android:id="@+id/versionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="1.0"
                android:fontFamily="@font/sfpromedium"
                />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>

