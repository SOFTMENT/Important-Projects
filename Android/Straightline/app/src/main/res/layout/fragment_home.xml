<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".Fragment.HomeFragment">
    <TextView
        android:id="@+id/myaccountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Challenges"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/sfprosemibold"
        android:textColor="#040404"
        />

    <TextView
        android:layout_alignParentEnd="true"
        android:id="@+id/seeall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="See All"
        android:layout_alignBaseline="@+id/myaccountText"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/sfprosemibold"
        android:textColor="@color/main_color"
        />

    <in.softment.straightline.Utils.KKViewPager
    android:layout_below="@+id/myaccountText"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/viewpager"
    />

    <TextView
        android:textSize="13sp"
        android:id="@+id/no_challenge_availble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Challenge Available"
        android:layout_centerInParent="true"
        android:fontFamily="@font/robo"

        />
</RelativeLayout>