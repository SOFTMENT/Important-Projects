                        android:text="00:00"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="12dp"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="11sp"
                        />
                    <TextView
                        android:id="@+id/endTime2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/seekbar2"
                        android:layout_alignEnd="@id/seekbar2"
                        android:text="00:00"
                        android:layout_marginEnd="12dp"
                        android:layout_marginTop="8dp"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="11sp"
                        />
                    <ImageView
                        android:id="@+id/equalizer2"
                        android:layout_width="wrap_content"
                        android:layout_height="34dp"
                        android:src="@drawable/ic_action_name"
                        android:textColor="@color/white"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/importbuttonback"
                        android:layout_margin="16dp"

                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="13sp"
                        />
                    <LinearLayout
                        android:visibility="invisible"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/volumnell3"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"


                        >
                        <in.softment.audiopan.VerticalTextView
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textSize="13sp"
                            android:padding="4dip"
                            android:fontFamily="sans-serif-condensed"
                            android:text="Volumne"

                            />
                        <in.softment.audiopan.Widget.VerticalSeekBar
                            android:progressTint="#f00"
                            android:thumbTint="#f00"
                            android:progressBackgroundTint="#fff"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="30dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"

                            />
                    </LinearLayout>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>


</LinearLayout>
</RelativeLayout>