<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    android:background="#fff"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".Fragments.PostFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:id="@+id/back"
            />
    <LinearLayout
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/ecommercedev"
            />
        <TextView
            android:id="@+id/categoriesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@string/edit_product"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/sfprosemibold"
            android:textColor="#040404"
            />


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:boxStrokeColor="#aaa"
            app:hintTextColor="#888"
            android:hint="Product Title"
            android:layout_marginTop="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            >
            <AutoCompleteTextView
                android:id="@+id/p_title"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/sfprosemibold2"
                android:textSize="12sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textCursorDrawable="@null"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView

            android:lineSpacingExtra="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/give_your_product_a_short_and_clear_title"
            android:layout_marginTop="4dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:fontFamily="@font/sfpromedium2"
            android:textSize="10sp"
            android:textColor="#03A9F4"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:boxStrokeColor="#aaa"
            android:hint="@string/product_description"
            android:layout_marginTop="25dp"
            app:hintTextColor="#888"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            >
            <AutoCompleteTextView
                android:maxEms="500"
                android:maxLength="500"
                android:id="@+id/p_description"
                android:paddingTop="10dp"
                android:layout_gravity="top|start"
                android:gravity="top|start"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/sfprosemibold2"
                android:textSize="12sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textCursorDrawable="@null"
                android:inputType="textMultiLine"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView

            android:lineSpacingExtra="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/give_your_product_a_short_and_clear_description"
            android:layout_marginTop="4dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:fontFamily="@font/sfpromedium2"
            android:textSize="10sp"
            android:textColor="#03A9F4"
            />
        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:hintTextColor="#888"
            app:boxStrokeColor="#aaa"
            android:hint="@string/product_price"
            android:layout_marginTop="25dp"

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            >
            <AutoCompleteTextView
                android:id="@+id/p_price"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/sfprosemibold2"
                android:textSize="12sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textCursorDrawable="@null"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout

            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <com.makeramen.roundedimageview.RoundedImageView
                app:riv_corner_radius="4dp"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/transparent_back"
                android:id="@+id/oneImage"
                />
            <LinearLayout
                android:id="@+id/oneLL"

                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:background="@drawable/dot_back_view"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/picture"
                    />
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#64B5F6"
                    android:background="@drawable/edittext_back"
                    android:hint="@string/choose_product_image"
                    android:fontFamily="@font/sfprosemibold"
                    android:textSize="11sp"

                    />
            </LinearLayout>
            <com.makeramen.roundedimageview.RoundedImageView
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:layout_marginStart="4dp"

                android:background="@drawable/transparent_back"
                android:id="@+id/twoImage"
                app:riv_corner_radius="4dp"
                />
            <LinearLayout
                android:id="@+id/twoLL"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:background="@drawable/dot_back_view"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/picture"
                    />
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#64B5F6"
                    android:background="@drawable/edittext_back"
                    android:hint="@string/choose_product_image"
                    android:fontFamily="@font/sfprosemibold"
                    android:textSize="11sp"

                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <com.makeramen.roundedimageview.RoundedImageView
                app:riv_corner_radius="4dp"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:layout_marginEnd="4dp"

                android:background="@drawable/transparent_back"
                android:id="@+id/threeImage"
                />
            <LinearLayout
                android:id="@+id/threeLL"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:background="@drawable/dot_back_view"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/picture"
                    />
                <TextView
                    android:lineSpacingExtra="2dp"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#64B5F6"
                    android:background="@drawable/edittext_back"
                    android:hint="@string/choose_product_image"
                    android:fontFamily="@font/sfprosemibold"
                    android:textSize="11sp"
                    />
            </LinearLayout>
            <com.makeramen.roundedimageview.RoundedImageView
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:layout_marginStart="4dp"
                android:background="@drawable/transparent_back"
                android:id="@+id/fourImage"
                app:riv_corner_radius="4dp"
                />
            <LinearLayout
                android:id="@+id/fourLL"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:background="@drawable/dot_back_view"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/picture"
                    />
                <TextView
                    android:textAlignment="center"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#64B5F6"
                    android:background="@drawable/edittext_back"
                    android:hint="@string/choose_product_image"
                    android:fontFamily="@font/sfprosemibold"
                    android:textSize="11sp"

                    />
            </LinearLayout>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginBottom="70dp"
            android:id="@+id/addProduct"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/transparent_back"
            android:backgroundTint="@color/marsala"
            android:fontFamily="@font/sfpromedium2"
            android:text="@string/update_product"
            android:textColor="#fff"
            android:textSize="13sp" />
    </LinearLayout>
    </RelativeLayout>

</ScrollView>